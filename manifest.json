{
  "manifest_version": 3,
  "name": "Redirect Notifier",
  "version": "1.0",
  "description": "Notifies the user when a site redirect occurs.",
  "permissions": ["tabs","webNavigation", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/wmf-logo-2x.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
